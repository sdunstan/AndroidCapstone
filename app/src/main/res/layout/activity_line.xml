<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lineLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.twominuteplays.LineActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Part"
        android:id="@+id/partTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/tap_a_line_to_record_it"
        android:id="@+id/recordPartInstructions"
        android:layout_below="@+id/partTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line 1"
        android:id="@+id/line1Button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/recordPartInstructions"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line 2"
        android:id="@+id/line2Button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/line1Button"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line 3"
        android:id="@+id/line3Button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/line2Button"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line 4"
        android:id="@+id/line4Button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/line3Button"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line 5"
        android:id="@+id/line5Button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/line4Button"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line 6"
        android:id="@+id/line6Button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/line5Button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
